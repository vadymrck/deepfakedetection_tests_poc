{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~fixtures/*": ["tests/fixtures/*"],
      "~support/*": ["tests/support/*"],
      "~aom/*": ["tests/aom/*"]
    }
  },
  "include": [
    "detect.ts",
    "evasion.ts",
    "falsepositives.ts",
    "playwright.config.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
